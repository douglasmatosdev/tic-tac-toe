{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": [
                "public/js/**/*.js"
            ],
            "rules": {
                "indent": "warn",
                "no-unused-vars": "warn",
                "no-unused-expressions": "warn",
                "no-use-before-define": "error",
                "semi": [
                    "error",
                    "always"
                ],
                "quotes": [
                    "error",
                    "double"
                ],
                "eqeqeq": [
                    "warn",
                    "smart"
                ],
                "curly": [
                    "warn",
                    "multi-line",
                    "consistent"
                ],
                "newline-before-return": "warn"
            }
        }
    ]
}